<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.tacheuser.controller.LoginController"
            prefHeight="500.0" prefWidth="600.0"
            stylesheets="@/style.css">

    <!-- Top Bar with Logo -->
    <top>
        <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="top-bar">
            <ImageView fitHeight="40" fitWidth="40">
                <image>
                    <Image url="@images/tayara.jpg" />
                </image>
            </ImageView>
            <Button text="X" styleClass="close-button"/>
        </HBox>
    </top>

    <!-- Login Form -->
    <center>
        <GridPane alignment="CENTER" prefWidth="400" vgap="15" hgap="20" styleClass="form-grid">
            <padding>
                <Insets top="20" left="20" right="20" bottom="20"/>
            </padding>

            <Label text="User Login" styleClass="form-title"
                   GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" alignment="CENTER"/>

            <Label text="Email" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="emailField" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="200"/>

            <Label text="Password" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <PasswordField fx:id="passwordField" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="200"/>

            <Button text="Login" onAction="#handleLoginAction" styleClass="form-button"
                    GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2" alignment="CENTER"/>

            <Hyperlink text="Don't have an account? Register" onAction="#goToRegister"
                       styleClass="hyperlink"
                       GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2" alignment="CENTER"/>
        </GridPane>
    </center>

</BorderPane>