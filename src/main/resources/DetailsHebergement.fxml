<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.edutrip.controller.DetailsHebergementController">
    <children>
        <Label layoutX="200.0" layoutY="20.0" text="Détails de l'Hébergement" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <ImageView fx:id="imageHebergement" layoutX="50.0" layoutY="50.0" fitHeight="150.0" fitWidth="200.0" preserveRatio="true" />

        <Label layoutX="50.0" layoutY="220.0" text="Nom:" />
        <Label fx:id="labelNom" layoutX="150.0" layoutY="220.0" style="-fx-font-weight: bold;" />

        <Label layoutX="50.0" layoutY="250.0" text="Type:" />
        <Label fx:id="labelType" layoutX="150.0" layoutY="250.0" style="-fx-text-fill: #555;" />

        <Label layoutX="50.0" layoutY="280.0" text="Adresse:" />
        <Label fx:id="labelAdresse" layoutX="150.0" layoutY="280.0" style="-fx-text-fill: #555;" />

        <Label layoutX="50.0" layoutY="310.0" text="Capacité:" />
        <Label fx:id="labelCapacite" layoutX="150.0" layoutY="310.0" style="-fx-text-fill: #007bff;" />

        <Label layoutX="50.0" layoutY="340.0" text="Disponible:" />
        <Label fx:id="labelDisponible" layoutX="150.0" layoutY="340.0" style="-fx-text-fill: #ff9800;" />

        <Label layoutX="50.0" layoutY="370.0" text="Prix:" />
        <Label fx:id="labelPrix" layoutX="150.0" layoutY="370.0" style="-fx-text-fill: #28a745; -fx-font-weight: bold;" />

        <Label layoutX="50.0" layoutY="400.0" text="Description:" />
        <Label fx:id="labelDescription" layoutX="150.0" layoutY="400.0" wrapText="true" maxWidth="400" style="-fx-text-fill: #444;" />

    </children>
</AnchorPane>
