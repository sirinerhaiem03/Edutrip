<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane prefHeight="600" prefWidth="800" style="-fx-background-color: white;"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.EduTrip.controllers.EtudiantVolsController">

   <!-- Sidebar -->
   <VBox layoutY="88.0" prefHeight="515.0" prefWidth="223.0"
         style="-fx-background-color: #57a0d2; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0);"
         spacing="10" alignment="CENTER">

      <ImageView fitHeight="42.0" fitWidth="47.0">
         <image>
            <Image url="@images/profil.png" />
         </image>
      </ImageView>

      <Button mnemonicParsing="false" prefHeight="42.0" prefWidth="190.0"
              style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;"
              text="Compte" />

      <Button text="Universités" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;"/>
      <Button text="Agence" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;"/>
      <Button text="Hébergement" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;"/>
      <Button text="Vols" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;"/>

      <Button text="Contactez-nous" style="-fx-background-color: white; -fx-text-fill: #57a0d2; -fx-font-size: 14px; -fx-font-weight: bold;"
              prefWidth="190.0" prefHeight="40.0"/>

   </VBox>

   <!-- Main Content -->
   <VBox layoutX="229.0" spacing="20" AnchorPane.bottomAnchor="20.0"
         AnchorPane.leftAnchor="229.0" AnchorPane.rightAnchor="20.0"
         AnchorPane.topAnchor="20.0">

      <!-- Titre -->
      <HBox alignment="CENTER_LEFT" spacing="20">
         <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #57a0d2;"
                text="Liste des Vols" />
      </HBox>

      <!-- Zone de filtrage -->
      <HBox alignment="CENTER_LEFT" spacing="10"
            style="-fx-background-color: #f5f5f5; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">

         <TextField fx:id="departureFilter" promptText="Départ"
                    style="-fx-background-radius: 5; -fx-pref-width: 150;"/>
         <TextField fx:id="arrivalFilter" promptText="Arrivée"
                    style="-fx-background-radius: 5; -fx-pref-width: 150;"/>
         <DatePicker fx:id="dateFilter" promptText="Date de vol"
                     style="-fx-background-radius: 5; -fx-pref-width: 160;"/>

         <Button onAction="#appliquerFiltres" text="Filtrer"
                 style="-fx-background-color: #57a0d2; -fx-text-fill: white; -fx-background-radius: 5; -fx-pref-width: 80;"/>
         <Button onAction="#reinitialiserFiltres" text="Réinitialiser"
                 style="-fx-background-color: #cccccc; -fx-text-fill: black; -fx-background-radius: 5; -fx-pref-width: 100;"/>
      </HBox>

      <!-- Liste des vols -->
      <ListView fx:id="volsListView"
                style="-fx-background-radius: 10; -fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0); -fx-padding: 10;"
                VBox.vgrow="ALWAYS" />
      <ScrollPane fitToWidth="true" fitToHeight="true">
         <VBox fx:id="volContainer" />
      </ScrollPane>
   </VBox>


   <!-- Logo -->
   <ImageView fitHeight="82.0" fitWidth="92.0" layoutX="50.0" layoutY="20.0"
              pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@images/logo.png" />
      </image>
   </ImageView>

</AnchorPane>
