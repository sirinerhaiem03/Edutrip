<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.edutrip.controller.HebergementInfo">
    <children>
        <Text fill="#0073e6" layoutX="200.0" layoutY="40.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Hébergement Details" textAlignment="CENTER">
            <font>
                <Font name="System Bold Italic" size="24.0" />
            </font>
        </Text>

        <TextField fx:id="nom" editable="false" layoutX="230.0" layoutY="80.0" promptText="Nom"/>
        <TextField fx:id="type" editable="false" layoutX="230.0" layoutY="120.0" promptText="Type"/>
        <TextField fx:id="adresse" editable="false" layoutX="230.0" layoutY="160.0" promptText="Adresse"/>
        <TextField fx:id="capacite" editable="false" layoutX="230.0" layoutY="200.0" promptText="Capacité"/>
        <TextField fx:id="prix" editable="false" layoutX="230.0" layoutY="240.0" promptText="Prix"/>
        <TextField fx:id="disponible" editable="false" layoutX="230.0" layoutY="280.0" promptText="Disponibilité"/>

        <TextArea fx:id="description" editable="false" layoutX="230.0" layoutY="320.0" prefWidth="300.0" prefHeight="60.0" promptText="Description"/>

        <ImageView fx:id="image" layoutX="50.0" layoutY="100.0" fitHeight="150.0" fitWidth="150.0" />
    </children>
</AnchorPane>
