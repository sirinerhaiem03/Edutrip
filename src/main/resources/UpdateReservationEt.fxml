<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="300.0" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.edutrip.controller.UpdateReservationEt">

    <children>
        <Label layoutX="30.0" layoutY="20.0" text="Modifier la Réservation"
               style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <Label layoutX="30.0" layoutY="60.0" text="Date de début:" />
        <DatePicker fx:id="dateStartPicker" layoutX="150.0" layoutY="55.0" />

        <Label layoutX="30.0" layoutY="100.0" text="Date de fin:" />
        <DatePicker fx:id="dateEndPicker" layoutX="150.0" layoutY="95.0" />

        <Label layoutX="30.0" layoutY="140.0" text="Commentaire:" />
        <TextField fx:id="txtStatus" layoutX="150.0" layoutY="135.0" prefWidth="200.0" />

        <Button fx:id="saveButton" layoutX="50.0" layoutY="200.0"
                text="Enregistrer" onAction="#saveUpdate" />
        <Button fx:id="cancelButton" layoutX="200.0" layoutY="200.0"
                text="Annuler" onAction="#cancelUpdate" />
    </children>
</AnchorPane>
