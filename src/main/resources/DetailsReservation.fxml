<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="350.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.edutrip.controller.DetailsReservationEt">
    <children>
        <Label layoutX="30.0" layoutY="30.0" text="Détails de la Réservation" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <Label fx:id="dateStartLabel" layoutX="30.0" layoutY="130.0" />
        <Label fx:id="dateEndLabel" layoutX="30.0" layoutY="160.0" />
        <Label fx:id="statusLabel" layoutX="30.0" layoutY="190.0" />

        <!-- Update and Delete Buttons -->
        <Button fx:id="updateButton" layoutX="50.0" layoutY="250.0" text="Modifier" onAction="#updateReservation" />
        <Button fx:id="deleteButton" layoutX="200.0" layoutY="250.0" text="Supprimer" onAction="#deleteReservation" />
    </children>
</AnchorPane>
