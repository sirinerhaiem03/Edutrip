<BorderPane prefHeight="600.0" prefWidth="800.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.tacheuser.controller.RegisterController">

    <center>
        <HBox spacing="0" HBox.hgrow="ALWAYS">

            <!-- Left Section: Form -->

            <VBox alignment="CENTER" spacing="20" styleClass="left-container" VBox.vgrow="ALWAYS">

                <ImageView fitHeight="102.0" fitWidth="198.0">
                    <image>
                        <Image url="@images/LOGO.jpg" />
                    </image>
                </ImageView>

                <GridPane alignment="CENTER" hgap="10" styleClass="form-grid" vgap="15">
                    <Label alignment="CENTER" styleClass="form-title" text="Register User" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />

                    <TextField fx:id="firstNameField" prefWidth="250" promptText="First Name" styleClass="form-field" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="lastNameField" prefWidth="250" promptText="Last Name" styleClass="form-field" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextField fx:id="emailField" prefWidth="250" promptText="Email" styleClass="form-field" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <TextField fx:id="phoneField" prefWidth="250" promptText="Phone" styleClass="form-field" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                    <PasswordField fx:id="passwordField" prefWidth="250" promptText="Password" styleClass="form-field" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                    <PasswordField fx:id="confirmPasswordField" prefWidth="250" promptText="Confirm Password" styleClass="form-field" GridPane.columnIndex="0" GridPane.rowIndex="6" />

                    <ComboBox fx:id="roleComboBox" prefWidth="250" promptText="Select Role" styleClass="form-field" GridPane.columnIndex="0" GridPane.rowIndex="7">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Ã‰tudiant" />
                                <String fx:value="Responsable Agence" />
                            </FXCollections>
                        </items>
                    </ComboBox>

                    <Button alignment="CENTER" onAction="#handleRegisterAction" styleClass="form-button" text="Register" GridPane.columnIndex="0" GridPane.rowIndex="8" />
                    <columnConstraints>
                        <ColumnConstraints />
                        <ColumnConstraints />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>

                </GridPane>

                <Hyperlink alignment="CENTER" onAction="#goToLogin" text="Already have an account? Login" GridPane.columnIndex="0" GridPane.rowIndex="9" />
            </VBox>

            <!-- Right Section: Full-Screen Image -->
            <VBox styleClass="right-container" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                <ImageView preserveRatio="false">
                    <VBox.vgrow>ALWAYS</VBox.vgrow>
                    <HBox.hgrow>ALWAYS</HBox.hgrow>
                    <image>
                        <Image url="@images/loginimage.jpg" />
                    </image>
                </ImageView>

            </VBox>
        </HBox>
    </center>
</BorderPane>