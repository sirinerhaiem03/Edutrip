<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.tacheuser.controller.RegisterController"
            prefHeight="600.0" prefWidth="800.0"
            stylesheets="@/style.css">

    <!-- Top Bar -->
    <top>
        <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="top-bar">
            <Button text="X" styleClass="close-button" />
            <Button styleClass="icon-button">
                <graphic>
                    <ImageView fitHeight="20.0" fitWidth="20.0">
                        <image>
                            <Image url="@ressources/images/tayara.jpg" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #f4f4f4;">
            <GridPane alignment="CENTER" prefWidth="400" vgap="15" hgap="20" styleClass="form-grid">
                <padding>
                    <Insets top="20" left="20" right="20" bottom="20"/>
                </padding>

                <Label text="Register User" styleClass="form-title"
                       GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" alignment="CENTER"/>

                <Label text="First Name" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="firstNameField" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="200"/>

                <Label text="Last Name" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextField fx:id="lastNameField" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="200"/>

                <Label text="Email" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextField fx:id="emailField" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="200"/>

                <Label text="Phone" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <TextField fx:id="phoneField" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="4" prefWidth="200"/>

                <Label text="Password" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                <PasswordField fx:id="passwordField" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="5" prefWidth="200"/>

                <Label text="Confirm Password" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                <PasswordField fx:id="confirmPasswordField" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="6" prefWidth="200"/>

                <Label text="Role" styleClass="form-label" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
                <ComboBox fx:id="roleComboBox" styleClass="form-field" GridPane.columnIndex="1" GridPane.rowIndex="7" prefWidth="200">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Ã‰tudiant"/>
                            <String fx:value="Responsable Agence"/>
                        </FXCollections>
                    </items>
                </ComboBox>

                <Button text="Register" onAction="#handleRegisterAction" styleClass="form-button"
                        GridPane.columnIndex="0" GridPane.rowIndex="8" GridPane.columnSpan="2" alignment="CENTER"/>
            </GridPane>

            <Hyperlink text="Already have an account? Login" onAction="#goToLogin"
                       GridPane.columnIndex="0" GridPane.rowIndex="9" GridPane.columnSpan="2" alignment="CENTER"/>
        </VBox>
    </center>

</BorderPane>
